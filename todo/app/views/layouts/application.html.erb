    <%# js %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="assets/jquery.min.js"></script>
    <script src="assets/bootstrap.js"></script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
