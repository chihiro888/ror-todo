<div class="container debug">

  <h1 class="text-center mt-5">TO-DO</h1>

  <div class="row mt-4 debug">
    <div class="col-10">
      <input type="text" class="form-control" placeholder="しなければならないことを書いてください">
    </div>  
    <div class="col-2 text-center">
      <button type="button" class="btn btn-secondary w-100">書く</button>
    </div>
  </div>

  <div class="todo-list mt-4">

    <% for item in @contents %>
      <div class="todo-item row mt-3 debug">
        <div class="col-8">
          <%= item.content %>
        </div>
        <div class="col-2 text-center">
          <%= item.created_at %>
        </div>
        <div class="col-1 text-center">
          <button type="button" class="btn btn-danger">削除</button>
        </div>
        <div class="col-1 text-center">
          <button type="button" class="btn btn-success">完了</button>
        </div>
      </div>
    <% end %>

  </div>
</div>